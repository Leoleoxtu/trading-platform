# =============================================================================
# TRADING PLATFORM - ENVIRONMENT CONFIGURATION (EXAMPLE)
# =============================================================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://trading_user:trading_pass@localhost:5432/trading_db
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=trading_pass
POSTGRES_DB=trading_db

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Kafka/Redpanda Configuration
# -----------------------------------------------------------------------------
KAFKA_BROKERS=localhost:9092

# -----------------------------------------------------------------------------
# MinIO (S3) Configuration
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=trading-data

# -----------------------------------------------------------------------------
# AI Provider - Anthropic Claude
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-api03-YOUR-KEY-HERE

# -----------------------------------------------------------------------------
# LangSmith Configuration (LLM Tracing & Monitoring)
# -----------------------------------------------------------------------------
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=ls-YOUR-KEY-HERE
LANGCHAIN_PROJECT=trading-platform-prod

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_AI_DASHBOARD=true
AI_DASHBOARD_PORT=8010
